<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" 
    name="org.eclipse.kura.example.subscriber.Subscriber"
    activate="activate" 
    deactivate="deactivate" 
    modified="updated" 
    enabled="true"
    immediate="true"
    configuration-policy="require">
	<implementation class="org.eclipse.kura.example.subscriber.Subscriber"/>

   <!-- If the component is configurable through the Kura ConfigurationService, it must expose a Service. -->
   <property name="service.pid" type="String" value="org.eclipse.kura.example.subscriber.Subscriber"/>
   <service>
       <provide interface="org.eclipse.kura.configuration.ConfigurableComponent"/>
   </service>
   
   <reference name="ConfigurationService"
     		  policy="static"
    		  bind="setConfigurationService"
    		  unbind="unsetConfigurationService"
    		  cardinality="1..1"
    		  interface="org.eclipse.kura.configuration.ConfigurationService"/>

	<property name="app.root" type="String" value="/site"/>
	
	<reference name="HttpService" 
              bind="setHttpService"
              unbind="unsetHttpService"
              interface="org.osgi.service.http.HttpService"/>
              
</scr:component>
